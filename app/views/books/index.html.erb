<!--投稿一覧-->
<div class="index">
 <h1 class="index-title">Books</h1>
 <table>
   <thead>
    <tr_>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   <% @books.each do |book| %>
    <tbody>
     <tr>
      <td class="index-t-title"><%= book.title %></td>
      <td class="index-t-body"><%= book.body %></td>
      <td class="index-t-links">
       <span class="link"><%= link_to 'Show', book_path(book.id) %></span>
       <span class="link"><%= link_to 'Edit', edit_book_path(book.id) %></span>
       <span class="link"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
      </td>
     </tr>
    </tbody>
   <% end %>
 </table>
</div>


<!--新規投稿-->
<div class="new">
 <h2>New book</h2>

 <% if @book.errors.any? %>

 <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <p><%= f.submit 'Create Book' %></p>

 <% end %>
</div>